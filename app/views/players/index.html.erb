<% content_for(:title, 'Players home') %>
<h1 class="danger">Numbers of players in our league: <%= @players.count %></h1>

<table>
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Actions</td>
    </tr>

  <tbody>
    <% @players.each do |p| %>
    
    <tr>
      <td><%=p.first_name %></td>
      <td><%=p.last_name %></td>
      <td>
        <%= link_to 'Show Page', player_path(p.id) %>
