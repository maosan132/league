        <span> | </span>
        <%= link_to 'Edit profile', player_edit_path(p.id) %>
        <!--<a href="/players/<%= p.id %>/edit">Edit profile</a>-->
        <span> | </span>
        <%= link_to 'Delete profile', player_path(p.id), data: { method: :delete, confirm: "r u sure?"} %>
        <!--<a href="/players/<%= p.id %>" data-method="delete" data-confirm="Are U sure?">Delete profile</a>-->
      </td>
      <% end %>
  </tbody>

  </thead>

</table>

